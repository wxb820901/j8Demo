<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Load up required properties -->
    <bean id="mainConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:properties/local.properties</value>
            </list>
        </property>
    </bean>


    <bean id="queueConnectionFactory" class="com.ubs.f35.transports.jms.ConnectionFactoryWrapper">
        <property name="serverUrl" value="<SSL:***/TCP:***>"/>
        <property name="userName" value="<username>"/>
        <property name="userPassword" value="password"/>

        <property name="emsSSLIdentity" value="<*.cert.p12>" /><!--will be read by bytes-->
        <property name="SSLPassword" value="<password>" />
        <property name="emsSSLTrustedCertificate" value="<*.pem>" /><!--will be read by bytes-->
        <property name="SSLIdentityEncoding" value=p12" />
        <property name="SSLEnableVerifyHostName" value="false" />
        <!--<property name="SSLExpectedHostName" value="${yggdrasil.neoNotifications.jms.ssl.expected.hostname:}" />-->
        <!--<property name="clientID" value="${yggdrasil.neoNotifications.jms.client.id:}" />-->
        <property name="connAttemptDelay" value="5000"/>
        <property name="connAttemptTimeout" value="5000"/>
        <property name="reconnAttemptCount" value="100000"/>
        <property name="reconnAttemptDelay" value="2000"/>
        <property name="reconnAttemptTimeout" value="2000"/>
    </bean>



    <!-- Set up the notification publisher -->
    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="queueConnectionFactory" />
        <property name="defaultDestinationName" value="<queuename>"/>
    </bean>




</beans>
